@using MvcCoreTutorial.Models.Domain;
@model IEnumerable<Person>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<div class="mt-3" style="width :50%">
    <div class="row">
        <h2>Person List</h2>
        <div class="col-md-4">
            <a href="/Person/AddPerson" class="btn btn-secondary">Add Person</a>
        </div>
        <table class="table table-striped mt-3">
            <tr>
                <th>Name</th>
                <th>E-mail</th>
                <th>Action</th>
            </tr>

            @foreach (var person in Model)
            {
                <tr>
                    <td>@person.Name</td>
                    <td>@person.Email</td>
                    <td>
                        <a class="btn btn-warning" href="/Person/EditPerson?id=@person.Id">Edit</a> ||
                        <a class="btn btn-danger" href="/Person/DeletePerson?id=@person.Id" onclick="return confirm('Are you sure you want to delete this person?')">Delete</a>
                    </td>
                </tr>
            }

            

        </table>
    </div>

  
</div>